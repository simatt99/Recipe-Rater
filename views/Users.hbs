{{!-- Data: userID, firstName, lastName, email, joinDate --}}

<div class="container-fluid">

<h1>Users Page</h1>

<div>
<table id="users-table">
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}          
        </tr>
    </thead>

    <tbody>
        {{#each data}}
        <tr data-value={{this.[User ID]}}>
            <td>{{this.[User ID]}}</td>
            <td>{{this.[First Name]}}</td>
            <td>{{this.[Last Name]}}</td>
            <td>{{this.[Email]}}</td>
            <td>{{this.[Join Date]}}</td>           
        </tr>
        {{/each}}
    </tbody>
</table>
</div>

