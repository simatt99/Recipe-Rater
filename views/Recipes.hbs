{{!-- Create a table --}}
<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Update</th>
            <th>Delete</th>            
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        
        {{#each data}}
        <tr>
            <td>{{this.recipeID}}</td>
            <td>{{this.name}}</td>
            <td>{{this.description}}</td>
            <td>{{this.userID}}</td>
            <td>{{this.datePosted}}</td>
            <td>{{this.instructionList}}</td>
            <td>{{this.cookTime}}</td>
            <td>{{this.servingSize}}</td>
            <td><button class="update-btn" data-id="{{this.id}}" onclick="updateRecord({{this.id}})">Update</button></td>
            <td><button class="delete-btn" data-id="{{this.id}}" onclick="deleteRecord({{this.id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

