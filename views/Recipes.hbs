{{!-- Form to add a record to the table  --}}
<h2>Add Recipe</h2>
<p>To add a new recipe, please enter their information below and click 'Submit'!</p>
<p>Inputs with a * next to them are nullable and not required</p>
<form id="add-recipe">

    <label for="name">Name:</label>
    <input type="text" name="name" id="name">

    <label for="description">*Description:</label>
    <textarea name="description" id="description"></textarea>

    <label for="userID">User ID:</label>
    <input type="number" name="userID" id="userID">

    <label for="datePosted">Date Posted:</label>
    <input type="date" name="datePosted" id="datePosted">

    <label for="instructionList">Instruction List:</label>
    <textarea name="instructionList" id="instructionList"></textarea>

    <label for="cookTime">Cook Time:</label>
    <input type="time" name="cookTime" id="cookTime">

    <label for="servingSize">Serving Size:</label>
    <input type="number" name="servingSize" id="servingSize">

    <input type="submit">
</form>
