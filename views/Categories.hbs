<div class="container-fluid">

<br>

<h1>Categories Page</h1>

<br>

<div>
<table id="categories-table">
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    <tbody>
        {{#each data}}
        <tr data-value={{this.[Category ID]}}>
            <td>{{this.[Category ID]}}</td>
            <td>{{this.[Category]}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>

<br>

