{{!-- Create a table --}}
<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Update</th>
            <th>Delete</th>            
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.reviewID}}</td>
            <td>{{this.RecipeName}}</td>
            <td>{{this.UserName}}</td>
            <td>{{this.datePosted}}</td>
            <td>{{this.rating}}</td>
            <td>{{this.comment}}</td>
            <td><button class="update-btn" data-id="{{this.id}}" onclick="updateRecord({{this.id}})">Update</button></td>
            <td><button class="delete-btn" data-id="{{this.id}}" onclick="deleteRecord({{this.id}})">Delete</button></td>            
        </tr>
        {{/each}}
    </tbody>
</table>

<h2>Add Review</h2>
<p>To add a new Reviews, please enter its information below and click 'Submit'!</p>
<form id="add-review">

    <label for="recipeID">Recipe ID:</label>
    <input type="number" name="recipeID" id="recipeID">

    <label for="userID">User ID:</label>
    <input type="number" name="userID" id="userID">

    <label for="datePosted">Date Posted:</label>
    <input type="date" name="datePosted" id="datePosted">

    <label for="rating">Rating:</label>
    <input type="number" name="rating" id="rating">

    <label for="comment">Comment:</label>
    <textarea name="comment" id="comment"></textarea>

    <input type="submit">
</form>
