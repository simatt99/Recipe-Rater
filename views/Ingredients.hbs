{{!-- Data: ingredientID, name, description, allergen --}}

<div class="container-fluid">

<br>

<h1>Ingredients Page</h1>

<br>

<div>
<table id="ingredients-table">
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}          
        </tr>
    </thead>

    <tbody>
        {{#each data}}
        <tr data-value={{this.[Ingredient ID]}}>
            <td>{{this.[Ingredient ID]}}</td>
            <td>{{this.[Ingredient]}}</td>
            {{#if this.[Description]}}
                <td>{{this.[Description]}}</td>
            {{else}}
                <td>NULL</td>
            {{/if}}
            <td>{{this.[Allergen?]}}</td>
            {{!-- {{#if this.[Allergen?]}}
                <td>True</td>
            {{else}}
                <td>False</td>
            {{/if}}      --}}
        </tr>
        {{/each}}
    </tbody>
</table>
</div>

<br>

{{!-- 2 # Citation for the following html:
2 # Date: 2/15/24
3 # Adapted from Node.js - Node.js - Step 5 - Adding New Data
