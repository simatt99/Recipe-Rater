{{!-- Form to add a record to the table  --}}
<h2>Add Ingredient</h2>
<p>To add a new ingredients, please enter their information below and click 'Submit'!</p>
<p>Inputs with a * next to them are nullable and not required</p>
<form id="add-ingredient">

    <label for="name">Name:</label>
    <input type="text" name="name" id="name">

    <label for="description">*Description:</label>
    <textarea name="description" id="description"></textarea>

    <label for="allergen">Allergen (0 for no, 1 for yes):</label>
    <input type="number" name="allergen" id="allergen" min="0" max="1">

    <input type="submit">
</form>

<h2>Edit Ingredient</h2>
<p>To edit ingredients, please enter the information below and click 'Submit'!</p>
<p>Inputs with a * next to them are nullable and not required</p>
<form id="edit-ingredient">

    <select name="ingredient-ID" id="ingredient-IDs">
        <option value="">Select a ingredient</option>
        {{#each data}}
        <option value="{{this.ingredientID}}">{{this.ingredientID}}</option>
        {{/each}}
    </select>

    <label for="ingredient-name">Name:</label>
    <input type="text" name="ingredient-name" id="edit-ingredient-name">

    <label for="edit-ingredient-description">*Description:</label>
    <textarea name="edit-ingredient-description" id="edit-ingredient-description"></textarea>

    <label for="edit-ingredient-allergen">Allergen (0 for no, 1 for yes):</label>
    <input type="number" name="edit-ingredient-allergen" id="edit-ingredient-allergen" min="0" max="1">

    <input type="submit">
</form>

<h2>Delete Ingredients</h2>
<p>To Delete a Ingredient, please select its information below and click 'Delete'!</p>
<form id="delete-ingredient">

    <select name="ingredient-ID" id="ingredient-IDs">
        <option value="">Select a ingredient</option>
        {{#each data}}
        <option value="{{this.ingredientID}}">{{this.ingredientID}}</option>
        {{/each}}
    </select>

    <td><button class="delete-btn" data-id="delete-review-button">Delete</button></td>  

</form>

