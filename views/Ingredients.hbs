{{!-- Create a table --}}
<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}          
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{#each data}}
        <tr>
            <td>{{this.ingredientID}}</td>
            <td>{{this.name}}</td>
            {{#if this.description}}
                <td>{{this.description}}</td>
            {{else}}
                <td>NULL</td>
            {{/if}}
            <td>{{this.allergen}}</td>       
        </tr>
        {{/each}}
    </tbody>
</table>

