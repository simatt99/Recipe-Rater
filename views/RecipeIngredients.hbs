<div class="container-fluid">

<br>

<h1>RecipeIngredients Page</h1>

<br>

<div>
<table id="recipeIngredients-table">
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>
    
    <tbody>
        {{#each data}}
        <tr data-value={{this.[RecipeIngredient ID]}}>
            <td>{{this.[RecipeIngredient ID]}}</td>
            <td>{{this.[Recipe Name]}}</td>
            <td>{{this.[Ingredient Name]}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>

<br>

