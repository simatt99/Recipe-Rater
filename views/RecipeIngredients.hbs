<div>
<h2>Add RecipeIngredient</h2>
<p>To add new recipeIngredient, please enter the information below and click 'Add'!</p>

<form id="post-recipeIngredient-form-ajax" class="row g-3">
    <div class="col-auto">
        <label for="post-select-recipe" class="visually-hidden">Recipe</label>
        <select name="post-select-recipe" id="post-recipeIngredient-recipe" class="form-select">
            <option value="">Select a Recipe</option>
            {{#each recipes}}
            <option value="{{this.recipeID}}">{{this.name}}</option>
            {{/each}}
        </select>
    </div>
    <div class="col-auto">
        <label for="post-select-ingredient" class="visually-hidden">Ingredient</label>
        <select name="post-select-ingredient" id="post-recipeIngredient-ingredient" class="form-select">
            <option value="">Select an Ingredient</option>
            {{#each ingredients}}
            <option value="{{this.ingredientID}}">{{this.name}}</option>
            {{/each}}
    </select>
    </div>
    <div class="col-auto">
        <button id="post-recipeIngredient-submit" class="btn mb-3 btn-secondary">Add</button>
    </div>
</form>
</div>

<br>

