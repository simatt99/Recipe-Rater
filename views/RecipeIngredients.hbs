<div>
<h2>Add RecipeIngredient</h2>
<p>To add new recipeIngredient, please enter the information below and click 'Add'!</p>

<form id="post-recipeIngredient-form-ajax">
    <label for="post-select-recipe">Recipe: </label>
    <select name="post-select-recipe" id="post-recipeIngredient-recipe">
        <option value="">Select a Recipe</option>
        {{#each recipes}}
        <option value="{{this.recipeID}}">{{this.name}}</option>
        {{/each}}
    </select>

    <label for="post-select-ingredient">Ingredient: </label>
    <select name="post-select-ingredient" id="post-recipeIngredient-ingredient">
        <option value="">Select an Ingredient</option>
        {{#each ingredients}}
        <option value="{{this.ingredientID}}">{{this.name}}</option>
        {{/each}}
    </select>

    <button id="post-recipeIngredient-submit">Add</button>
</form>
</div>

