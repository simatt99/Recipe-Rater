{{!-- Data: recipeCategoryID, recipeID, categoryID --}}

<div class="container-fluid">

<br>

<h1>RecipeCategories Page</h1>

<br>

<div>
<table id="recipeCategories-table">
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>
    
    <tbody>
        {{#each data}}
        <tr data-value={{this.[RecipeCategory ID]}}>
            <td>{{this.[RecipeCategory ID]}}</td>
            <td>{{this.[Recipe Name]}}</td>
            <td>{{this.[Category Name]}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>

<br>

